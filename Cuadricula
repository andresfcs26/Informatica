ctx.fillRect(0,113,42.75,37.5)
ctx.fillRect(256,150,42.75,37.5)
ctx.fillRect(0,188,42.75,37.5)
ctx.fillRect(256,188,42.75,37.5)
ctx.fillRect(43,188,42.75,37.5)
ctx.fillRect(85,188,42.75,37.5)
ctx.fillRect(214,188,42.75,37.5)
ctx.fillRect(170,188,42.75,37.5)
ctx.fillRect(128,188,42.75,37.5)
ctx.fillRect(128,188,42.75,37.5)
ctx.fillRect(0,150,42.75,37.5)
ctx.fillRect(0,225,42.75,37.5)
ctx.fillRect(256,225,42.75,37.5)
ctx.fillRect(256,112,42.75,37.5)
ctx.fillRect(256,112,42.75,37.5)
ctx.fillRect(256,112,42.75,37.5)
ctx.fillRect(0,262,42.75,37.5)
ctx.fillRect(256,262,42.75,37.5)



